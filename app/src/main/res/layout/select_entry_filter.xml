<?xml version="1.0" encoding="utf-8" ?>
<FrameLayout xmlns:a="http://schemas.android.com/apk/res/android"
    a:id="@+id/top_layout"
    a:layout_width="fill_parent"
    a:layout_height="wrap_content"
    a:background="?android:attr/listChoiceBackgroundIndicator"
    a:clickable="true"
    a:focusable="true"
    a:gravity="center_vertical"
    a:minHeight="@dimen/select_entry_height"
    a:orientation="horizontal"
    a:paddingTop="3dip"
    a:paddingEnd="?android:attr/scrollbarSize">

    <LinearLayout
        a:id="@+id/list_node_row"
        a:layout_width="match_parent"
        a:layout_height="wrap_content"
        a:layout_margin="0dp"
        a:orientation="horizontal"
        a:padding="0dp">

        <ImageView
            a:id="@+id/showFilter"
            style="@style/FilterButton"
            a:layout_width="wrap_content"
            a:layout_height="wrap_content"
            a:layout_gravity="center_vertical"
            a:clickable="true"
            a:focusable="true" />

        <RelativeLayout
            a:paddingStart="2dp"
            a:layout_width="0dp"
            a:layout_height="wrap_content"
            a:layout_weight="1"
            a:duplicateParentState="true">

            <TextView
                a:id="@+id/label"
                a:layout_width="wrap_content"
                a:layout_height="wrap_content"
                a:duplicateParentState="true"
                a:ellipsize="marquee"
                a:fadingEdge="horizontal"
                a:singleLine="true"
                a:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                a:id="@+id/data"
                a:layout_width="wrap_content"
                a:layout_height="wrap_content"
                a:layout_below="@+id/label"
                a:layout_alignStart="@+id/label"
                a:duplicateParentState="true"
                a:maxLines="2"
                a:textAppearance="?android:attr/textAppearanceSmall" />
        </RelativeLayout>

        <ImageView
            a:id="@+id/more"
            style="@style/MoreButton"
            a:layout_width="wrap_content"
            a:layout_height="wrap_content"
            a:layout_gravity="bottom" />

        <ImageView
            a:id="@+id/split"
            style="@style/SplitButton"
            a:layout_width="wrap_content"
            a:layout_height="wrap_content"
            a:layout_gravity="center_vertical"
            a:visibility="gone" />

        <ImageView
            a:id="@+id/bMinus"
            style="@style/MinusButton"
            a:layout_width="wrap_content"
            a:layout_height="wrap_content"
            a:layout_gravity="center_vertical"
            a:clickable="true"
            a:focusable="true"
            a:visibility="gone" />

        <ImageView
            a:id="@+id/plus_minus"
            style="@style/PlusButton"
            a:layout_width="wrap_content"
            a:layout_height="wrap_content"
            a:layout_gravity="center_vertical"
            a:clickable="true"
            a:focusable="true"
            a:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        a:id="@+id/filter_node_row"
        a:layout_width="match_parent"
        a:layout_height="wrap_content"
        a:layout_margin="0dp"
        a:orientation="horizontal"
        a:padding="0dp"
        a:visibility="gone">

        <ImageView
            a:id="@+id/closeFilter"
            style="@style/FilterCancelButton"
            a:layout_width="wrap_content"
            a:layout_height="wrap_content"
            a:layout_gravity="center_vertical"
            a:clickable="true"
            a:focusable="true" />

        <AutoCompleteTextView
            a:id="@+id/autocomplete_filter"
            a:layout_width="0dp"
            a:layout_height="wrap_content"
            a:layout_weight="1"
            a:completionThreshold="1"
            a:hint="@string/autocomplete_filter_hint"
            a:imeOptions="flagNoExtractUi"
            a:selectAllOnFocus="true"
            a:text="" />

        <ImageView
            a:id="@+id/show_list"
            style="@style/ShowListButton"
            a:layout_width="wrap_content"
            a:layout_height="wrap_content"
            a:layout_gravity="center_vertical"
            a:clickable="true"
            a:focusable="true" />

    </LinearLayout>

</FrameLayout>
